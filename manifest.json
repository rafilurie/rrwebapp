{
    "name": "ThoughtMic",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Open Google Drive",

    "icons": { 
        "16": "chrome_ext/icon16.png",
        "48": "chrome_ext/icon48.png",
        "128": "chrome_ext/icon128.png" },
    
    "browser_action": {
        "default_icon": "chrome_ext/icon16.png",
        "default_title": "Read-mate!"
    },

    "background": {
        "scripts": [
            "chrome_ext/background.js"
        ]
    },

    "permissions": [
        "http://127.0.0.1:5000/empty/*",
        "http://*/",
        "tabs",
        "contextMenus"
    ],
    "commands": {
        "add-link": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
        "description": "adds current page's link"
        },
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y",
                "chromeos": "Ctrl+Shift+U",
                "linux": "Ctrl+Shift+J"
            }
        },
        "_execute_page_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "windows": "Alt+Shift+P",
                "mac": "Alt+Shift+P"
            }
        }
    }
}